<h1>All Restaurants</h1>

<h3><%= link_to 'Create new restaurant', new_restaurant_path %></h3>

<% @restaurants.each do |restaurant| %>

  <p><%= link_to restaurant_path(restaurant) do %>
      <%= restaurant.name %> | <%= restaurant.address %> | <%= restaurant.stars %>
     <% end %>

  </p>

<% end %>